<%= msg %>

<form method="post" action="" class="mx-auto p-3 border border-primary" >

  
        <h1 class="text-primary p-2 h3" > SỬA SẢN PHẨM</h1>
        <div class="mb-3 row">
            <div class="col-md-6">
                 <label>Tên sản phẩm</label> <input class="form-control" name="nameSp" value="<%= objSP.nameSp  %> " >
            </div>
            <div class="col-md-6">
                 <label>Giá SP</label> <input class="form-control" name="giaTien" type="number" value=" <%= objSP.giaTien %> ">
            </div>
            <div class="col-md-6">
                <label> Nôi Dung SP</label> <input class="form-control" name="noiDung" type="text"  value="<%= objSP.noiDung %> ">
           </div>
        </div>
        <div class="mb-3 row">
            <!-- <div class="col-md-6">
                 <label>Ngày</label> <input class="form-control" name="ngay" type="date">
            </div> -->
            <!-- <div class="col-md-6">
                 <label>Hình</label> <input class="form-control" name="hinh" type="text">
            </div> -->
        </div>
        <div class="mb-3 row">
            <div class="col-md-6">
                 <label>Loại</label> 
                 <select name="theloai">
                    <% listTl.forEach((row)=>{ 
                        let selected='';
                        if(String (row._id ) == String (objSP.id_theloai))
                        selected= ' selected ';
                        %>
                        <option <%= selected %> value="<%= row._id %>">   <%= row.nameTl %>  </option> 
            
                    <% }); %>
            
            
                </select> 
            </div>
            <!-- <div class="col-md-6">
                 <label>Hot</label> 
                 <div class="form-control">
                    <input name="hot" type="radio" value="1"> Hot
                    <input name="hot" type="radio" value="0" checked> Không hot
                 </div>
            </div> -->
        </div>
        <div class="mb-3 row">
            <label>Mô tả</label> 
            <textarea name="ghiChu" rows="5" class="form-control"><%= objSP.ghiChu %> </textarea>    
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-warning py-2 px-5" >Sửa</button>
        </div> 
        </form> 










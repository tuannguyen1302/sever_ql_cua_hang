<%- include('../inc/top') %>


<h3 class="position-relative py-2 px-4 text-bg-dark border border-dark rounded-pill"  >Thông Tin Loại sản phẩm </h3>
<div class="card  scrollspy-example " data-bs-spy="scroll" data-bs-smooth-scroll="true" tabindex="0">
    <div  data-bs-spy="scroll" data-bs-smooth-scroll="true"  class="scrollspy-example" tabindex="0">
         <table class="table table-bordered  border-Dark ">
        <thead>
            <tr>
                <th scope="col">Stt</th>
                <th scope="col">Tên Loại Sản Phẩm </th>
                <th scope="col">Tác Vụ </th>

            </tr>
        </thead>
      
            <% listTl.forEach((row)=>{ %>
             
                <tr>
                    
                    <td> 1 </td>
                    <td> <%= row.nameTl%></td>
                  
                    <td>

                        <a href="/sp/editTl/<%= row.id %>"> <button type="button"
                                class="btn btn-info">Sửa</button></a>

                        <a aria-current="page" data-toggle="modal" data-target="#deleteModal<%= row._id  %>">
                            <button type="button" class="btn btn-info">Xóa </button></a>
                        <form method="POST" action="/sp/xoaTL/<%= row._id %>?_method=DELETE">
                            <input type="hidden" name="_id" value="<%= row._id  %>">
                            <div class="modal fade" id="deleteModal<%= row._id  %>" tabindex="-1" role="dialog"
                                aria-labelledby="deleteModalLabel<%= row._id  %>" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteModalLabel<%= row._id  %>">Confirm
                                                Delete</h5>
                                            <button type="button" class="close" data-dismiss="modal"
                                                aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Bạn chắc chắn muốn xóa sản phẩm "<%= row.nameTl %>"?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Không</button>
                                            <button type="submit" class="btn btn-danger">Có</button>
                                        </div>
                    </td>
            
                </tr>
                <% });  %>

       
    </table>

    </div>
  

</div>
</div>


<%- include('../inc/bottom') %>